{
  "name": "shindo-launcher",
  "private": true,
  "version": "0.2.0",
  "description": "Shindo Launcher desktop app",
  "author": {
    "name": "MikiDevAHM",
    "email": "launcher@shindo.gg"
  },
  "type": "commonjs",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:renderer\" \"pnpm:watch:shared\" \"pnpm:watch:preload\" \"pnpm:watch:main\" \"pnpm:dev:electron\"",
    "dev:renderer": "cd packages/renderer && vite",
    "dev:electron": "wait-on tcp:5173 dist/main/main.js dist/preload/index.js dist/shared/index.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "watch:main": "tsc -p packages/main/tsconfig.json --watch",
    "watch:preload": "tsc -p packages/preload/tsconfig.json --watch",
    "watch:shared": "tsc -p packages/shared/tsconfig.json --watch",
    "build": "pnpm clean && pnpm build:shared && pnpm build:preload && pnpm build:main && pnpm build:renderer",
    "build:shared": "tsc -p packages/shared/tsconfig.json",
    "build:preload": "tsc -p packages/preload/tsconfig.json",
    "build:main": "tsc -p packages/main/tsconfig.json",
    "build:renderer": "cd packages/renderer && vite build",
    "preview": "cd packages/renderer && vite preview",
    "clean": "rimraf dist",
    "package": "pnpm build && electron-builder",
    "lint": "echo \"TODO: add linting\""
  },
  "dependencies": {
    "@shindo/shared": "workspace:*",
    "lucide-svelte": "^0.329.0",
    "minecraft-launcher-core": "^3.18.2",
    "node-fetch": "^3.3.2",
    "semver": "^7.7.3",
    "tar": "^6.2.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^22.10.1",
    "@types/semver": "^7.5.8",
    "@types/tar": "^6.1.13",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.3.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.3",
    "vite": "^5.0.11",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.shindo.launcher",
    "productName": "Shindo Launcher",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/main/**/*",
      "dist/preload/**/*",
      "dist/shared/**/*",
      "dist/renderer/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "packages/renderer/src/assets/logo.ico",
        "to": "logo.ico"
      },
      {
        "from": "packages/renderer/src/assets/logo.icns",
        "to": "logo.icns"
      },
      {
        "from": "packages/renderer/src/assets/logo.png",
        "to": "logo.png"
      }
    ],
    "extraMetadata": {
      "main": "dist/main/main.js"
    },
    "asar": true,
    "win": {
      "icon": "packages/renderer/src/assets/logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "category": "public.app-category.games",
      "icon": "packages/renderer/src/assets/logo.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "packages/renderer/src/assets/logo.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Game"
    },
    "nsis": {
      "installerIcon": "packages/renderer/src/assets/logo.ico",
      "uninstallerIcon": "packages/renderer/src/assets/logo.ico",
      "installerHeaderIcon": "packages/renderer/src/assets/logo.ico",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Shindo Launcher"
    }
  }
}
